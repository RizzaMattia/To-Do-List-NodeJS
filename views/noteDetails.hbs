{{> homeHead}}
{{> navbar}}

<div class="container mt-5">
    <!-- Mostra il titolo della nota -->
    <h1>{{note.title}}</h1>

    <!-- Mostra la descrizione della nota -->
    <p><strong>Description:</strong></p>
    <p>{{note.description}}</p>

    <!-- Link per tornare alla home -->
    <a href="/" class="btn btn-secondary">Go to Home</a>

    <!-- Modulo per completare la nota -->
    <form action="/note/complete/{{note._id}}" method="POST" class="d-inline">
        <button type="submit" class="btn btn-success ms-2">Complete Note</button>
    </form>

    <!-- Modulo per eliminare la nota -->
    <form id="deleteForm" action="/note/delete/{{note._id}}" method="POST" class="d-inline">
        <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Delete Note
        </button>
    </form>
</div>

<!-- Modal di conferma eliminazione -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Intestazione del modal -->
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Corpo del modal con il messaggio di conferma -->
            <div class="modal-body">
                Are you sure you want to delete this note? This action cannot be undone.
            </div>

            <!-- Footer del modal con i pulsanti -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger" form="deleteForm">Delete Note</button>
            </div>
        </div>
    </div>
</div>

{{> footer}}